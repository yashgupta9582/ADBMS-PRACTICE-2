--Part A
CREATE TABLE DEPARTMENT(dept_id INT PRIMARY KEY,dept_name VARCHAR(50));
DESC DEPARTMENT;
CREATE TABLE COURSES(course_id INT PRIMARY KEY , course_name VARCHAR(100),dept_id INT,FOREIGN KEY(dept_id) REFERENCES DEPARTMENT(dept_id));
DESC COURSES;

--Part B
